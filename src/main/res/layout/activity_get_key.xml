<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:contentInsetStart="0dp"

    android:orientation="vertical"
    tools:context=".getKeyActivity">

    <EditText
        android:id="@+id/editText_get_key"
        android:layout_width="301dp"
        android:layout_height="56dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="50dp"
        android:ems="10"
        android:hint="AuthKey"
        android:maxLines="1"
        android:singleLine="true"
        android:text=""
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_get_key"
        android:layout_width="131dp"
        android:layout_height="55dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/key_new"
        android:gravity="center_vertical"
        android:onClick="onClick"
        android:paddingLeft="15sp"
        android:text="获取密钥"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toStartOf="@+id/button_copy_key"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_get_key" />

    <Button
        android:id="@+id/button_copy_key"
        android:layout_width="65dp"
        android:layout_height="55dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="96dp"
        android:text="复制"
        android:onClick="onClick"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_get_key"
        app:layout_constraintTop_toBottomOf="@+id/editText_get_key" />

    <ListView
        android:id="@+id/listview_get_key"
        android:layout_width="match_parent"
        android:layout_height="632dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="2dp"
        android:divider="@null"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_get_key" />

</androidx.constraintlayout.widget.ConstraintLayout>